import java.util.*;
public class main{
    public static void main(String[] args) {
        Scanner sc=new Scanner(System.in);
        int n=sc.nextInt();
        long sum=1, s=0;
        for(int i=1; i<=n; i++) {
            sum*=i;
            s+=sum;
        }
        System.out.println(s);
    }
}
